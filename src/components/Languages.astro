---
const { lists } = Astro.props;
---
{lists.map((item) => (
  <div class="language-item">
    <div class="language-header">
      <p class="language-name">{item.language}</p>
      {item.level && <span class="language-level">{item.level}</span>}
    </div>
    <div class="w3-light-grey w3-round-xlarge progress-container">
      <div class="w3-round-xlarge progress-bar" style={`width:${item.percentage}%`}>
        <span class="percentage">{item.percentage}%</span>
      </div>
    </div>
  </div>
))}

<style>
  .language-item {
    margin-bottom: 15px;
  }

  .language-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5px;
  }

  .language-name {
    font-weight: 500;
    margin: 0;
    color: var(--text-primary);
  }

  .language-level {
    font-size: 0.85em;
    padding: 2px 8px;
    border-radius: 12px;
    background-color: var(--primary-color);
    color: white;
    font-weight: 500;
  }

  .progress-container {
    height: 24px;
    background-color: rgba(0,0,0,0.05);
    overflow: hidden;
  }

  .progress-bar {
    height: 100%;
    background: linear-gradient(90deg, var(--primary-color), var(--primary-light));
    transition: width 1s ease-in-out;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .percentage {
    color: white;
    font-size: 0.85em;
    font-weight: 500;
    text-shadow: 0 1px 2px rgba(0,0,0,0.2);
  }
</style>